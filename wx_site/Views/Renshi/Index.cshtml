@model wx_site.Models.Userinfo
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="zh-cn">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <link rel="stylesheet" href="~/css/bootstrap.css" />
        <link href="~/css/bootstrap.min.css" rel="stylesheet" />
        <script type="text/javascript" src="~/js/bootstrap.js"></script>
    <title>欢迎使用人事管理自助查询系统</title>
</head>
<body>

    <div class="container">
        <div class="panel panel-default col-md-12 col-xs-12">
            <img src="~/img/renshi_hd.png" class="img-rounded col-md-12 col-xs-12">
        </div>
        <div class="panel panel-default">
            <div class="panel-body ">
                <a href="@Url.Action("dangan")@HttpUtility.UrlDecode("?id=")@Model.UserId">
                    <img src="~/img/dangan.png" class="img-rounded col-md-4 col-xs-6">
                </a>
                <a href="@Url.Action("kaoqin")@HttpUtility.UrlDecode("?id=")@Model.UserId">
                    <img src="~/img/kaoqin.png" class="img-rounded col-md-4 col-xs-6">
                </a>
                <a href="@Url.Action("login")@HttpUtility.UrlDecode("?id=")@Model.UserId">
                    <img src="~/img/gongzi.png" class="img-rounded col-md-4 col-xs-6">
                </a>
                <a href="@Url.Action("qingjia")@HttpUtility.UrlDecode("?id=")@Model.UserId">
                    <img src="~/img/qingjia.png" class="img-rounded col-md-4 col-xs-6">
                </a>
                <a href="@Url.Action("qrkq")@HttpUtility.UrlDecode("?id=")@Model.UserId">
                    <img src="~/img/queren.png" class="img-rounded col-md-4 col-xs-6">
                </a>
                <a href="@Url.Action("qrgz")@HttpUtility.UrlDecode("?id=")@Model.UserId">
                    <img src="~/img/queren1.png" class="img-rounded col-md-4 col-xs-6">
                </a>
                <a href="@Url.Action("change_pwd")@HttpUtility.UrlDecode("?id=")@Model.UserId">
                    <img src="~/img/change_pwd.png" class="img-rounded col-md-4 col-xs-6">
                </a>
            </div>
        </div>
    </div>
</body>
</html>
