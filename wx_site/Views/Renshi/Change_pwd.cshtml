
@{
    Layout = null;
}

<!DOCTYPE html>

<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>修改密码</title>
    <link rel="stylesheet" href="../../css/bootstrap.min.css" />
    <script type="text/javascript" src="~/js/jquery-3.3.1.min.js"></script>
    <script type="text/javascript" src="~/js/bootstrap.min.js"></script>
</head>

<body>
    <div class="container">
        <nav class="navbar navbar-default" role="navigation">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse"
                            data-target="#example-navbar-collapse">
                        <span class="sr-only">切换导航</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand">导航栏</a>
                </div>
                <div class="collapse navbar-collapse" id="example-navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li class="active"><a class="glyphicon glyphicon-user icon" href="@Url.Action("dangan")@HttpUtility.UrlDecode("?id=")@Request.QueryString["id"]"> 职员档案</a></li>
                        <li class="active"><a class="glyphicon glyphicon-time icon" href="@Url.Action("kaoqin")@HttpUtility.UrlDecode("?id=")@Request.QueryString["id"]"> 考勤信息</a></li>
                        <li class="active"><a class="glyphicon glyphicon-yen icon" href="@Url.Action("login")@HttpUtility.UrlDecode("?id=")@Request.QueryString["id"]"> 工资信息</a></li>
                        <li class="active"><a class="glyphicon glyphicon-log-out icon" href="@Url.Action("qingjia")@HttpUtility.UrlDecode("?id=")@Request.QueryString["id"]"> 自助请假</a></li>
                        <li class="active"><a class="glyphicon glyphicon-lock icon" href="@Url.Action("change_pwd")@HttpUtility.UrlDecode("?id=")@Request.QueryString["id"]"> 修改密码</a></li>
                    </ul>
                </div>
            </div>
        </nav>
        <hr />
        <div class="panel panel-success">
            <div class="panel-heading">
                <h4 class="text-danger">请注意：密码长度不能超过12位</h4>
            </div>
            <form id="form1" action="@Url.Action("change_pwd")@HttpUtility.UrlDecode("?id=")@Request.QueryString["id"]" method="post">
                <div class="panel-body">
                    <table class="table table-bordered table-striped">
                        <tbody>
                            <tr>
                                <td class="text-right ">旧密码</td>
                                <td class="text-left">
                                    <div class=" col-md-4 col-xs-12">
                                        <input type="password" class="form-control" name="old" maxlength="12" />
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td class="text-right ">新密码</td>
                                <td class="text-left">
                                    <div class=" col-md-4 col-xs-12">
                                        <input type="password" class="form-control" name="password" maxlength="12" />
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td class="text-right ">密码确认</td>
                                <td class="text-left">
                                    <div class=" col-md-4 col-xs-12">
                                        <input type="password" class="form-control" name="password1" maxlength="12" />
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td class="text-right "></td>
                                <td class="text-left">
                                    @if (@Model == 3)
                                    {
                                <div id="myAlert" class="alert alert-danger show">
                                    <a href="#" class="close" data-dismiss="alert"></a>
                                    <strong>旧密码不正确</strong>
                                </div>
                                    }
                                    else if (@Model == 2)
                                    {
                                <div id="myAlert" class="alert alert-warning show">
                                    <a href="#" class="close" data-dismiss="alert"></a>
                                    <strong>两次输入的新密码不一致</strong>
                                </div>
                                    }
                                    else if (@Model == 0)
                                    {
                                <div id="myAlert" class="alert alert-warning show">
                                    <a href="#" class="close" data-dismiss="alert"></a>
                                    <strong>密码修改失败，请联系管理员进行修改</strong>
                                </div>
                                    }
                                    else if (@Model == 1)
                                    {
                                <div id="myAlert" class="alert alert-success show">
                                    <a href="#" class="close" data-dismiss="alert"></a>
                                    <strong>密码修改成功，请牢记新密码</strong>
                                </div>
                                    }
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <button type="submit" class="btn btn-info col-md-3 col-xs-3">提 交</button>
                    <div class="col-md-6 col-xs-6"></div>
                    <button type="reset" class="btn btn-info col-md-3 col-xs-3">重 置</button>
                </div>
            </form>
        </div>
    </div>
    <script type="text/javascript">
        $(function () {
            $('#datetimepicker_fr').datetimepicker({
                format: 'hh:ii',
                startView: 1,
                language: 'zh-CN', //汉化
                autoclose: true //选择日期后自动关闭
            });
            $('#datetimepicker_to').datetimepicker({
                format: 'hh:ii',
                startView: 1,
                language: 'zh-CN', //汉化
                autoclose: true //选择日期后自动关闭
            });
            $('#datetimepicker').datetimepicker({
                　　minView: "month", //选择日期后，不会再跳转去选择时分秒
                　　format: "yyyy-mm-dd", //选择日期后，文本框显示的日期格式
                　　language: 'zh-CN', //汉化
                　　autoclose: true //选择日期后自动关闭
            });
        });
    </script>
</body>

</html>
